<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/tv_title_identity_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_blue">
        <TextView
            android:padding="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/identity_1"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:textStyle="bold"/>
    </LinearLayout>


    <AbsoluteLayout
        android:layout_marginTop="48dp"
        android:id="@+id/al_identity_front"
        android:layout_marginLeft="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_title_identity_1">

        <ImageView
            android:id="@+id/tv_front"
            android:layout_width="630dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/sfzbkg_front" />

        <ImageView
            android:id="@+id/img_head"
            android:layout_width="180dp"
            android:layout_height="240dp"
            android:layout_x="402dp"
            android:layout_y="28dp"
            app:srcCompat="@drawable/u2"
            tools:layout_editor_absoluteX="210dp"
            tools:layout_editor_absoluteY="170dp"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="117dp"
            android:layout_y="52dp"
            android:text="蒋昌华"
            android:textSize="26sp"
            tools:layout_editor_absoluteX="65dp"
            tools:layout_editor_absoluteY="29dp" />

        <TextView
            android:id="@+id/tv_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="120dp"
            android:layout_y="105dp"
            android:text="男"
            android:textSize="22sp"
            tools:layout_editor_absoluteX="65dp"
            tools:layout_editor_absoluteY="55dp" />

        <TextView
            android:id="@+id/tv_nation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="255dp"
            android:layout_y="105dp"
            android:text="汉"
            android:textSize="22sp"
            tools:layout_editor_absoluteX="142dp"
            tools:layout_editor_absoluteY="59dp" />

        <TextView
            android:id="@+id/tv_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="120dp"
            android:layout_y="152dp"
            android:text="1986"
            android:textSize="22sp"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="93dp" />

        <TextView
            android:id="@+id/tv_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="224dp"
            android:layout_y="152dp"
            android:text="12"
            android:textSize="22sp"
            tools:layout_editor_absoluteX="119dp"
            tools:layout_editor_absoluteY="81dp" />

        <TextView
            android:id="@+id/tv_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="285dp"
            android:layout_y="152dp"
            android:text="21"
            android:textSize="22sp"
            tools:layout_editor_absoluteX="132dp"
            tools:layout_editor_absoluteY="62dp" />

        <TextView
            android:id="@+id/tv_identity_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="216dp"
            android:layout_y="330dp"
            android:text="362330198602082811"
            android:textSize="26sp"
            tools:layout_editor_absoluteX="107dp"
            tools:layout_editor_absoluteY="176dp"
            android:letterSpacing="0.2"
            />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="120dp"
            android:layout_y="205dp"
            android:maxWidth="250dp"
            android:singleLine="false"
            android:text="北京市朝阳区信息互通大力神三六零号"
            android:textSize="22sp"
            tools:layout_editor_absoluteX="60dp"
            tools:layout_editor_absoluteY="109dp" />
    </AbsoluteLayout>

    <AbsoluteLayout
        android:layout_marginTop="48dp"
        android:id="@+id/al_identity_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title_identity_1"
        android:layout_toRightOf="@id/al_identity_front"
        android:layout_marginLeft="4dp"
        >
        <ImageView
            android:id="@+id/tv_reverse"
            android:layout_width="630dp"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:src="@drawable/sfzbkg_back"
            />

        <TextView
            android:id="@+id/tv_issuin_authority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="265dp"
            android:layout_y="285dp"
            android:text="鄱阳县公安局"
            android:textSize="22sp"
            tools:layout_editor_absoluteX="273dp"
            tools:layout_editor_absoluteY="291dp" />

        <TextView
            android:id="@+id/tv_time_limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="265dp"
            android:layout_y="335dp"
            android:text="192011-129322"
            android:textSize="22sp"
            tools:layout_editor_absoluteX="262dp"
            tools:layout_editor_absoluteY="341dp" />
    </AbsoluteLayout>

    <TextView
        android:id="@+id/btn_cancel"
        android:layout_width="96dp"
        android:layout_height="40dp"
        android:text="@string/cancel"
        android:gravity="center"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textColor="@color/bg_blue"
        android:background="@drawable/bg_cacel_btn"
        android:textSize="20sp"
        android:layout_margin="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"

        />

    <TextView
        android:id="@+id/btn_save"
        android:layout_width="96dp"
        android:layout_height="40dp"
        android:text="@string/save"
        android:gravity="center"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textColor="@color/white"
        android:background="@drawable/bg_save_btn"
        android:textSize="20sp"
        android:layout_margin="16dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/btn_cancel"
        />

</RelativeLayout>