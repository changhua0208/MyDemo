<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/layout_nota_header" ></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="100dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            >
            <TextView
                android:id="@+id/btn_parties"
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:layout_gravity="right"
                android:background="@drawable/bg_blue_light_large_btn"
                android:gravity="center"
                android:text="@string/paries"
                android:textColor="@color/white"
                android:textSize="32sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/btn_txt_res"
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:text="@string/resource_txt"
                android:layout_gravity="center"
                android:background="@drawable/bg_red_large_btn"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="32sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            >
            <TextView
                android:id="@+id/btn_video"
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:text="@string/resource_video"
                android:layout_gravity="center"
                android:background="@drawable/bg_yellow_large_btn"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="32sp"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="60dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            >
            <TextView
                android:id="@+id/btn_audio"
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:layout_gravity="right"
                android:background="@drawable/bg_orange_large_btn"
                android:gravity="center"
                android:text="@string/resource_audio"
                android:textColor="@color/white"
                android:textSize="32sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/btn_photo"
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:text="@string/resource_photo"
                android:layout_gravity="center"
                android:background="@drawable/bg_jasper_large_btn"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="32sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            >
            <TextView
                android:id="@+id/btn_pigeonhole"
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:text="@string/resource_pigeonhole"
                android:layout_gravity="center"
                android:background="@drawable/bg_pink_large_btn"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="32sp"
                />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>