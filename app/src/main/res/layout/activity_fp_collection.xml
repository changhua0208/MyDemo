<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:id="@+id/tv_left_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/left_hand"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"/>
    <LinearLayout
        android:id="@+id/ll_left"
        android:layout_marginTop="16dp"
        android:layout_below="@id/tv_left_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="48dp">
            <ImageView
                android:id="@+id/fp_l_1"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:scaleType="fitXY"
                android:src="@drawable/u2"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/thumb_finger"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="16dp">
            <ImageView
                android:id="@+id/fp_l_2"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:scaleType="fitXY"
                android:src="@drawable/u2"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/index_finger"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="16dp">
            <ImageView
                android:id="@+id/fp_l_3"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:scaleType="fitXY"
                android:src="@drawable/u2"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/middle_finger"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="16dp">
            <ImageView
                android:id="@+id/fp_l_4"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:scaleType="fitXY"
                android:src="@drawable/u2"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ring_finger"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="16dp">
            <ImageView
                android:id="@+id/fp_l_5"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:scaleType="fitXY"
                android:src="@drawable/u2"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/little_finger"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_right_title"
        android:layout_below="@id/ll_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/right_hand"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"/>
    <LinearLayout
        android:layout_below="@id/tv_right_title"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="48dp">
            <ImageView
                android:id="@+id/fp_r_1"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:scaleType="fitXY"
                android:src="@drawable/u2"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/thumb_finger"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="16dp">
            <ImageView
                android:id="@+id/fp_r_2"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:scaleType="fitXY"
                android:src="@drawable/u2"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/index_finger"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="16dp">
            <ImageView
                android:id="@+id/fp_r_3"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:scaleType="fitXY"
                android:src="@drawable/u2"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/middle_finger"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="16dp">
            <ImageView
                android:id="@+id/fp_r_4"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:scaleType="fitXY"
                android:src="@drawable/u2"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ring_finger"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="16dp">
            <ImageView
                android:id="@+id/fp_r_5"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:scaleType="fitXY"
                android:src="@drawable/u2"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/little_finger"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="right"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="@string/cancel" />
    </LinearLayout>

</RelativeLayout>
