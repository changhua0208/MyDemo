<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_left_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/left_hand"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="48dp"
        android:textSize="20sp"
        android:textStyle="bold"/>
    <LinearLayout
        android:id="@+id/ll_left"
        android:layout_marginTop="16dp"
        android:layout_below="@id/tv_left_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="48dp">
            <ImageView
                android:id="@+id/fp_l_1"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:scaleType="centerCrop"
                android:background="@color/bg_blue"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/thumb_finger"
                android:gravity="center"
                android:textSize="20sp"
                android:padding="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="32dp">
            <ImageView
                android:id="@+id/fp_l_2"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:scaleType="centerCrop"
                android:background="@color/bg_blue"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/index_finger"
                android:gravity="center"
                android:textSize="20sp"
                android:padding="8dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="32dp">
            <ImageView
                android:id="@+id/fp_l_3"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:scaleType="centerCrop"
                android:background="@color/bg_blue"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/middle_finger"
                android:gravity="center"
                android:textSize="20sp"
                android:padding="8dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="32dp">
            <ImageView
                android:id="@+id/fp_l_4"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:scaleType="centerCrop"
                android:background="@color/bg_blue"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ring_finger"
                android:gravity="center"
                android:textSize="20sp"
                android:padding="8dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="32dp">
            <ImageView
                android:id="@+id/fp_l_5"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:scaleType="centerCrop"
                android:background="@color/bg_blue"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/little_finger"
                android:gravity="center"
                android:textSize="20sp"
                android:padding="8dp"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_right_title"
        android:layout_below="@id/ll_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/right_hand"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="48dp"
        android:textSize="20sp"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_below="@id/tv_right_title"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="48dp">
            <ImageView
                android:id="@+id/fp_r_1"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:scaleType="centerCrop"
                android:background="@color/bg_blue"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/thumb_finger"
                android:gravity="center"
                android:textSize="20sp"
                android:padding="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="32dp">
            <ImageView
                android:id="@+id/fp_r_2"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:scaleType="centerCrop"
                android:background="@color/bg_blue"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/index_finger"
                android:gravity="center"
                android:textSize="20sp"
                android:padding="8dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="32dp">
            <ImageView
                android:id="@+id/fp_r_3"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:scaleType="centerCrop"
                android:background="@color/bg_blue"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/middle_finger"
                android:gravity="center"
                android:textSize="20sp"
                android:padding="8dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="32dp">
            <ImageView
                android:id="@+id/fp_r_4"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:scaleType="centerCrop"
                android:background="@color/bg_blue"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ring_finger"
                android:gravity="center"
                android:textSize="20sp"
                android:padding="8dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="32dp">
            <ImageView
                android:id="@+id/fp_r_5"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:scaleType="centerCrop"
                android:background="@color/bg_blue"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/little_finger"
                android:gravity="center"
                android:textSize="20sp"
                android:padding="8dp"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>