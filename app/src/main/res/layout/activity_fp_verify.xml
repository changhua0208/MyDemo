<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:focusable="true">

    <include layout="@layout/layout_fp_verify" android:id="@+id/layout_fp_verify"/>

    <TextView
        android:id="@+id/btn_comparison1"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@id/layout_fp_verify"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/bg_cacel_btn"
        android:gravity="center"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="@string/comparison1"
        android:textColor="@color/bg_blue"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/btn_comparison2"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignTop="@id/btn_comparison1"
        android:layout_toRightOf="@id/btn_comparison1"
        android:background="@drawable/bg_cacel_btn"
        android:gravity="center"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="@string/comparison2"
        android:textColor="@color/bg_blue"
        android:textSize="18sp"
        android:layout_marginLeft="96dp"/>

    <TextView
        android:id="@+id/btn_cancel"
        android:layout_width="108dp"
        android:layout_height="40dp"
        android:text="@string/cancel"
        android:gravity="center"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textColor="@color/bg_blue"
        android:background="@drawable/bg_cacel_btn"
        android:textSize="18sp"
        android:layout_margin="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        />

    <TextView
        android:id="@+id/btn_save"
        android:layout_width="108dp"
        android:layout_height="40dp"
        android:text="@string/save"
        android:gravity="center"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textColor="@color/white"
        android:background="@drawable/bg_save_btn"
        android:textSize="18sp"
        android:layout_margin="16dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/btn_cancel"
        />

</RelativeLayout>