<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_current_fp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/current_fp"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="16dp"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/img_current_fp1"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_alignLeft="@id/tv_current_fp"
        android:layout_below="@id/tv_current_fp"
        android:layout_marginTop="16dp"
        android:background="@color/bg_blue"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/img_current_fp2"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_alignLeft="@id/tv_current_fp"
        android:layout_below="@id/img_current_fp1"
        android:layout_marginTop="24dp"
        android:background="@color/bg_blue"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_identity_fp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/identity_fp"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="96dp"
        android:layout_toRightOf="@id/img_current_fp1"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/img_identity_fp1"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_alignLeft="@id/tv_identity_fp"
        android:layout_below="@id/tv_current_fp"
        android:layout_marginTop="16dp"
        android:background="@color/bg_blue"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/img_identity_fp2"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_alignLeft="@id/tv_identity_fp"
        android:layout_below="@id/img_identity_fp1"
        android:layout_marginTop="24dp"
        android:background="@color/bg_blue"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tv_identity_info_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="@string/identity_info"
        android:layout_marginTop="24dp"
        android:layout_toRightOf="@id/img_identity_fp1"
        android:layout_marginLeft="186dp"
        />
    <RelativeLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:background="@drawable/table_stroke_shape"
        android:layout_toRightOf="@id/img_identity_fp1"
        android:layout_alignLeft="@id/tv_identity_info_title"
        android:layout_below="@id/tv_identity_info_title"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/tv_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="16dp"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/et_name"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_title_name"
            android:hint="@string/name"
            android:layout_marginLeft="48dp"
            android:layout_alignBaseline="@id/tv_title_name"
            android:textSize="20sp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:background="@drawable/table_stroke_shape"
            />

        <TextView
            android:id="@+id/tv_title_birthday"
            android:layout_below="@id/tv_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/birthday"
            android:layout_marginTop="48dp"
            android:layout_marginLeft="16dp"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/et_birthday"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_title_birthday"
            android:hint="@string/birthday"
            android:layout_marginLeft="48dp"
            android:layout_alignBaseline="@id/tv_title_birthday"
            android:textSize="20sp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:background="@drawable/table_stroke_shape"
            />

        <TextView
            android:id="@+id/tv_title_identity_no"
            android:layout_below="@id/tv_title_birthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/identity_no"
            android:layout_marginTop="48dp"
            android:layout_marginLeft="16dp"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/et_identity_no"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:hint="@string/identity_no"
            android:layout_alignLeft="@id/et_birthday"
            android:layout_alignBaseline="@id/tv_title_identity_no"
            android:textSize="20sp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:background="@drawable/table_stroke_shape"
            />

        <TextView
            android:id="@+id/tv_title_verify_time"
            android:layout_below="@id/tv_title_identity_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/verify_time"
            android:layout_marginTop="48dp"
            android:layout_marginLeft="16dp"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/et_verify_time"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:hint="@string/verify_time"
            android:layout_alignLeft="@id/et_birthday"
            android:layout_alignBaseline="@id/tv_title_verify_time"
            android:textSize="20sp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:background="@drawable/table_stroke_shape"
            />

        <TextView
            android:id="@+id/tv_title_similarity1"
            android:layout_below="@id/tv_title_verify_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/similarity1"
            android:layout_marginTop="48dp"
            android:layout_marginLeft="16dp"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/et_similarity1"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:hint="@string/similarity1"
            android:layout_alignLeft="@id/et_birthday"
            android:layout_alignBaseline="@id/tv_title_similarity1"
            android:textSize="20sp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:background="@drawable/table_stroke_shape"
            />

        <TextView
            android:id="@+id/tv_title_similarity2"
            android:layout_below="@id/tv_title_similarity1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/similarity2"
            android:layout_marginTop="48dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="24dp"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/et_similarity2"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:hint="@string/similarity2"
            android:layout_alignLeft="@id/et_birthday"
            android:layout_alignBaseline="@id/tv_title_similarity2"
            android:layout_marginBottom="24dp"
            android:textSize="20sp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:background="@drawable/table_stroke_shape"
            />
    </RelativeLayout>

</RelativeLayout>