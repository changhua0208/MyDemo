<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_title_identity_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/identity_1"/>
    <ImageView
        android:id="@+id/tv_obverse"
        android:layout_below="@id/tv_title_identity_1"
        android:layout_width="420dp"
        android:layout_height="300dp"
        android:scaleType="fitXY"
        android:layout_toRightOf="@id/tv_title_identity_1"
        android:src="@drawable/u2"
        />

    <ImageView
        android:id="@+id/tv_reverse"
        android:layout_below="@id/tv_title_identity_1"
        android:layout_width="420dp"
        android:layout_height="300dp"
        android:layout_toRightOf="@id/tv_obverse"
        android:layout_marginLeft="24dp"
        android:scaleType="fitXY"
        android:src="@drawable/u2"
        />
    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:layout_alignTop="@id/btn_cancel"
        android:layout_toLeftOf="@id/btn_cancel"
        android:layout_marginRight="16dp"/>

</RelativeLayout>