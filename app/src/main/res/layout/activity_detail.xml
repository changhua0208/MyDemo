<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_root_container">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/comparison_details"
            android:background="@color/bg_blue"
            android:textColor="@color/white"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingLeft="24dp"
            android:textSize="24sp"
            android:textStyle="bold"/>
        <!-- 身份证-->
        <RelativeLayout
            android:id="@+id/rl_identity_card_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:orientation="horizontal"
            android:visibility="gone"
            >
            <com.houyi.notarization.MyRadioButton
                android:id="@+id/rb_selection1"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="8dp"
                android:gravity="center"

                />

            <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toLeftOf="@id/rb_selection1"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/detail_title_shape"
                    android:paddingBottom="8dp"
                    android:paddingLeft="16dp"
                    android:paddingTop="8dp"
                    android:text="@string/identity_card"
                    android:textColor="@color/white"
                    android:textSize="22sp"/>
                <LinearLayout
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView

                        android:id="@+id/img_identity_front"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"/>
                    <ImageView
                        android:id="@+id/img_identity_back"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/ll_verify_info"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/detail_title_shape"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                android:text="@string/comparison"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="32dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rl_face_verify_info"
                android:visibility="gone">
                <com.houyi.notarization.MyRadioButton
                    android:id="@+id/rb_selection2"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="8dp"
                    android:gravity="center"
                    />
                <include
                    android:id="@+id/include_face_verify"
                    layout="@layout/layout_face_verify"
                    android:layout_toLeftOf="@id/rb_selection2"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_fp_verify_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                >
                <com.houyi.notarization.MyRadioButton
                    android:id="@+id/rb_selection3"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="8dp"
                    android:gravity="center"
                    />
                <include
                    android:id="@+id/include_fp_verify"
                    layout="@layout/layout_fp_verify"
                    android:layout_toLeftOf="@id/rb_selection3"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"/>

            </RelativeLayout>
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/rl_fp_collection_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:orientation="horizontal"
            android:visibility="gone"
            >
            <com.houyi.notarization.MyRadioButton
                android:id="@+id/rb_selection4"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="8dp"
                android:gravity="center"
                />

            <!-- 指纹扫描-->
            <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toLeftOf="@id/rb_selection4">

                <TextView
                    android:id="@+id/tv_fp_scan_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/detail_title_shape"
                    android:text="@string/fp_scan"
                    android:textColor="@color/white"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingLeft="16dp"
                    android:textSize="22sp"
                    />
                <include layout="@layout/layout_fp_collection" />
            </LinearLayout>
        </RelativeLayout>
        <!-- 现场照片-->
        <RelativeLayout
            android:id="@+id/rl_photo_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:orientation="horizontal"
            android:visibility="gone"
            >
            <com.houyi.notarization.MyRadioButton
                android:id="@+id/rb_selection5"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="8dp"
                android:gravity="center"
                />

            <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toLeftOf="@id/rb_selection5">
                <TextView
                    android:id="@+id/tv_current_photo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/detail_title_shape"
                    android:text="@string/photo"
                    android:textColor="@color/white"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingLeft="16dp"
                    android:textSize="22sp"
                    />
                <include layout="@layout/layout_take_photo" />

            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/btn_save"
                android:layout_width="136dp"
                android:layout_height="40dp"
                android:text="@string/pic_save_as"
                android:gravity="center"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="@color/white"
                android:background="@drawable/bg_save_btn"
                android:textSize="20sp"
                android:layout_margin="16dp"
                />

            <TextView
                android:id="@+id/btn_cancel"
                android:layout_width="108dp"
                android:layout_height="40dp"
                android:text="@string/cancel"
                android:gravity="center"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="@color/bg_blue"
                android:background="@drawable/bg_cacel_btn"
                android:textSize="20sp"
                android:layout_margin="16dp"
                />

            <!--<Button-->
            <!--android:id="@+id/btn_cancel"-->
            <!--android:layout_marginTop="16dp"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="@string/cancel"-->
            <!--android:padding="16dp"-->
            <!--android:layout_margin="8dp"/>-->

        </LinearLayout>
    </LinearLayout>
</ScrollView>